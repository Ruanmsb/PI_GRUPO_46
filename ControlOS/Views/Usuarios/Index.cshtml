@{
    ViewData["Title"] = "Usuários";
}

<div>
    <h1>Usuários</h1>
</div>

<div class="container-usuarios">

    <form action="#" method="post">

        <label for="nome">Nome Completo:</label><br>
        <input type="text" id="nome" name="NomeCompleto" required><br><br>

        <label for="email">E-mail:</label><br>
        <input type="email" id="email" name="Email" required><br><br>

        <label for="senha">Senha:</label><br>
        <input type="password" id="senha" name="Senha" required><br><br>

        <label for="telefone">Telefone:</label><br>
        <input type="text" id="telefone" name="Telefone" required><br><br>

        <label for="tipo">Tipo de Usuário:</label><br>
        <select id="tipo" name="TipoUsuario" required>
            <option value="Gestor">Gestor</option>
            <option value="Tecnico">Técnico</option>
        </select><br><br>

        <label for="dataCadastro">Data de Cadastro:</label><br>
        <input type="date" id="dataCadastro" name="DataCadastro" readonly><br><br>

        <button type="submit">Cadastrar</button>

    </form>

    <script>
        const hoje = new Date().toISOString().split("T")[0];
        document.getElementById("dataCadastro").value = hoje;
    </script>

</div>
