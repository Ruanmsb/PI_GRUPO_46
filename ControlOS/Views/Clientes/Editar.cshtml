@model ClientesModel

@{
    ViewData["Title"] = "Editar Contato";
}

<div>
    <h1>Editar Cliente</h1>

    <form asp-controller="Clientes" asp-action="Editar" method="post">

        <input type="hidden" asp-for="Id"/>

        <label for="nomerazao">Nome ou Razão Social</label><br>
        <input type="text" asp-for="NomeRazao" id="nomerazao" required><br><br>

        <label for="email">E-mail:</label><br>
        <input type="email" asp-for="Email" id="email"><br><br>

        <label for="telefone">Telefone:</label><br>
        <input type="text" asp-for="Telefone" id="telefone" required><br><br>

        <label for="cpfcnpj">CPF ou CNPJ:</label><br>
        <input type="text" asp-for="CpfCnpj" id="cpfcnpj" required><br><br>

        <label for="rua">Rua:</label><br>
        <input type="text" asp-for="Rua" id="rua" required><br><br>

        <label for="Numero">Número:</label><br>
        <input type="text" asp-for="Numero" id="Numero" required><br><br>

        <label for="complemento">Complemento:</label><br>
        <input type="text" asp-for="Complemento" id="complemento"><br><br>

        <label for="cidade">Cidade:</label><br>
        <input type="text" asp-for="Cidade" id="cidade" required><br><br>

        <label for="bairro">Bairro:</label><br>
        <input type="text" asp-for="Bairro" id="bairro" required><br><br>

        <label for="cep">CEP:</label><br>
        <input type="text" asp-for="CEP" id="cep" required><br><br>


        <button type="submit">Salvar</button>
        <a asp-controller="Clientes" asp-action="Index">Cancelar</a>

    </form>
</div>
