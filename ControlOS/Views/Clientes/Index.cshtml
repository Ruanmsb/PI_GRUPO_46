@{
    ViewData["Title"] = "Clientes";
}

<div>
    <h1>Clientes</h1>
</div>

<div class="container-clientes">

    <form action="#" method="post">

        <label for="nome">Nome:</label><br>
        <input type="text" id="nome" name="Nome" required><br><br>

        <label for="cpf">CPF/CNPJ:</label><br>
        <input type="text" id="cpf" name="CPF_CNPJ" required><br><br>

        <label for="email">E-mail:</label><br>
        <input type="email" id="email" name="Email"><br><br>

        <label for="telefone">Telefone:</label><br>
        <input type="text" id="telefone" name="Telefone" required><br><br>

        <label for="rua">Rua:</label><br>
        <input type="text" id="rua" name="Rua" required><br><br>

        <label for="bairro">Bairro:</label><br>
        <input type="text" id="bairro" name="Bairro" required><br><br>

        <label for="cidade">Cidade:</label><br>
        <input type="text" id="cidade" name="Cidade" required><br><br>

        <label for="cep">CEP:</label><br>
        <input type="text" id="cep" name="CEP" required><br><br>

        <label for="dataCadastro">Data de Cadastro:</label><br>
        <input type="date" id="dataCadastro" name="DataCadastro" readonly><br><br>

        <button type="submit">Cadastrar</button>

    </form>

    <script>
        const hoje = new Date().toISOString().split("T")[0];
        document.getElementById("dataCadastro").value = hoje;
    </script>

</div>

