@model List<ClientesModel>

@{
    ViewData["Title"] = "Clientes";
}

<head>
    <link href="~/css/site.css" rel="stylesheet" />
</head>

<div>

    <h1>Clientes</h1>
    <p><a class="add-cliente" asp-controller="Clientes" asp-action="Criar">Cadastrar um Cliente</a></p>

    <table class="tabela-cliente">
        <tr class="tabela-cliente-cabecalho">
            <th class="tabela-cliente-cabecalho-item">NOME:</th>
            <th class="tabela-cliente-cabecalho-item">E-MAIL</th>
            <th class="tabela-cliente-cabecalho-item">TELEFONE</th>
            <th class="tabela-cliente-cabecalho-item">CPF / CNPJ</th>
        </tr>
        <tbody class="tabela-cliente-body">
            @if (Model != null && Model.Any())
            {
                foreach (ClientesModel cliente in Model)
                {
                    <tr>
                        <th>@cliente.NomeRazao</th>
                        <th>@cliente.Email</th>
                        <th>@cliente.Telefone</th>
                        <th>@cliente.CpfCnpj</th>
                        <th><a role="button" asp-controller="Clientes" asp-action="Editar" asp-route-id="@cliente.Id">Editar</a></th>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>


