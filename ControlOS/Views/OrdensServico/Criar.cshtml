@model ControlOS.Models.OrdensServicoModel

@{
    var clientes = (ViewBag.Clientes as List<ControlOS.Models.ClientesModel>) ?? new();
    var usuarios = (ViewBag.Usuarios as List<ControlOS.Models.UsuariosModel>) ?? new();
}


@{
    ViewData["Title"] = "Criar OS";
}

<head>
    <link href="~/css/site.css" rel="stylesheet" />
</head>

<div class="form-container">
    <h1 class="form-title">Criando uma OS</h1>

    <form class="form" asp-controller="OrdensServico" asp-action="Criar" method="post">

        <div class="form-group medio">
            <label for="tiposervico" class="form-label">Selecione o Tipo de Serviço:</label>
            <select id="tiposervico" asp-for="TipoServico" class="form-input" required>
                <option value="">-- selecione --</option>
                <option value="Manutencao">Manutenção</option>
                <option value="Instalacao">Instalação</option>
                <option value="Revisao">Revisão</option>
            </select>
        </div>

        <div class="form-group medio">
            <label for="externointerno" class="form-label">Selecione se é Interno ou Externo:</label>
            <select id="externointerno" asp-for="ExternoInterno" class="form-input" required>
                <option value="">-- selecione --</option>
                <option value="Externo">Externo</option>
                <option value="Interno">Interno</option>
            </select>
        </div>

        <div class="form-group medio">
            <label for="statusos" class="form-label">Status da OS:</label>
            <select id="statusos" asp-for="StatusOS" class="form-input" required>
                <option value="Pendente">Pendente</option>
                <option value="EmAndamento">Em Andamento</option>
                <option value="Finalizado">Finalizado</option>
                <option value="Cancelado">Cancelado</option>
            </select>
        </div>

        <div class="form-group grande">
            <label class="form-label">Descrição do Serviço</label>
            <textarea asp-for="DescricaoServico" class="form-input" rows="5"></textarea>
            <span asp-validation-for="DescricaoServico" class="text-danger"></span>
        </div>

        <div class="form-group pequeno">
            <label for="dataos" class="form-label">Data da OS:</label>
            <input asp-for="DataOS" type="date" id="dataos" class="form-input" required>
            <span asp-validation-for="DataOS" class="text-danger"></span>
        </div>

        <div class="form-group medio">
            <label class="form-label">Cliente</label>
            <select asp-for="NomeCliente" class="form-input" required>
                <option value="">-- selecione --</option>
                @foreach (var c in clientes)
                {
                    <option value="@c.NomeRazao">@c.NomeRazao</option>
                }
            </select>
        </div>

        <div class="form-group medio">
            <label class="form-label">Técnico</label>
            <select asp-for="NomeTecnico" class="form-input" required>
                <option value="">-- selecione --</option>
                @foreach (var t in usuarios)
                {
                    <option value="@t.Name">@t.Name</option>
                }
            </select>
        </div>

        <div class="form-actions">
            <button type="submit" class="btn btn-primary">Criar</button>
        </div>

    </form>
</div>
