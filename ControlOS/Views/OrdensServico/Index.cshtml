@model List<OrdensServicoModel>

@{
    ViewData["Title"] = "Ordens de Serviço";
}

<div>
    <h1>Ordens de Serviço</h1>

    <a asp-controller="OrdensServico" asp-action="Criar" >Adicionar uma OS</a>

    <table>
        <tr>
            <th>Tipo de Serviço</th>
            <th>Externo/Interno</th>
            <th>Status OS</th>
            <th>Descrição</th>
            <th>Data</th>
            <th>Cliente</th>
            <th>Técnico</th>
        </tr>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (OrdensServicoModel os in Model)
                {
                    <tr>
                        <th>@os.TipoServico</th>
                        <th>@os.ExternoInterno</th>
                        <th>@os.StatusOS</th>
                        <th>@os.DescricaoServico</th>
                        <th>@os.DataOS</th>
                        <th>@os.NomeCliente</th>
                        <th>@os.NomeTecnico</th>
                        <th><a role="button" asp-controller="OrdensServico" asp-action="Editar" asp-route-id="@os.Id">Visualizar</a></th>
                    </tr>
                }
            }
        </tbody>
    </table>

</div>
